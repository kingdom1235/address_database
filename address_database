#!/bin/bash

# Set the path to the database 
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DATABASE="$SCRIPT_DIR/mydatabase.db"

# Ensure the database file exists
